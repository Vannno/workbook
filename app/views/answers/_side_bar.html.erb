<div class="side-bar-header">
  <div class="header-name">
    <%= link_to edit_user_path(current_user) do %>
      <%= current_user.name %>
    <% end %>
  </div>
  <div class="create-room">
    <%= link_to "チャットを作成する", new_question_path %>
  </div>
</div>

<div class="rooms">
  <% current_user.questions.each do |question| %> 
    <div class="room">
      <div class="room-name">
          <%= link_to question.name, question_answers_path(question) %> 
      </div>
    </div>
  <% end %>
</div>
